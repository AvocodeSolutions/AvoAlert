{
  "name": "@avoalert/api",
  "version": "0.1.1",
  "private": true,
  "description": "AvoAlert modular monolith API (Express + TypeScript)",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/app.js",
    "railway:build": "npm run build",
    "railway:start": "npm run start",
    "worker": "tsx watch src/workers/signal-consumer.ts",
    "worker:prod": "node dist/workers/signal-consumer.js",
    "notification-worker": "tsx watch src/workers/notification-worker.ts",
    "notification-worker:prod": "node dist/workers/notification-worker.js",
    "simulate": "tsx src/tools/simulate-tradingview.ts",
    "test-email": "tsx src/tools/test-email.ts",
    "test-webhook": "tsx src/tools/test-webhook.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "@upstash/redis": "^1.31.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "resend": "^4.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "dependenciesMeta": {},
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
